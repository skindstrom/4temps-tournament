{
  "name": "4temps-tournament",
  "version": "0.0.1",
  "description": "A website to host 4temps tournaments",
  "main": "server/index.js",
  "repository": "git@github.com:SimonKinds/4temps-tournament.git",
  "author": "Simon Kindstr√∂m <simon.kindstrom@gmail.com>",
  "license": "GPL-3.0",
  "scripts": {
    "start": "npm-run-all -p watch:client watch:server",
    "watch:server": "nodemon src/index.js --exec babel-node",
    "watch:client": "webpack --config config/webpack.dev.js",
    "build": "npm-run-all -p build:*",
    "build:server": "babel -s -d lib/ src/ ",
    "build:client": "webpack --config config/webpack.prod.js",
    "start:prod": "node lib/index.js"
  },
  "dependencies": {
    "express": "^4.16.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router-dom": "^4.2.2",
    "semantic-ui-react": "^0.77.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "flow-bin": "^0.61.0",
    "nodemon": "^1.12.5",
    "npm-run-all": "^4.1.2",
    "uglifyjs-webpack-plugin": "^1.1.2",
    "webpack": "^3.10.0",
    "webpack-merge": "^4.1.1",
    "webpack-node-externals": "^1.6.0"
  }
}
